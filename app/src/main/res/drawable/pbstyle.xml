<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-50"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270">

    <shape
        android:shape="ring"
        android:useLevel="false">
        <gradient
            android:endColor="#FF6242A1"
            android:centerColor="#FF00BFA5"
            android:startColor="#FFF47979"
            android:type="sweep"
            android:useLevel="false">

        </gradient>
    </shape>

</rotate>