                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/colorFont"/>

                &lt;!&ndash;<ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:indeterminateDrawable="@drawable/pbstyle"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">
                </ProgressBar>&ndash;&gt;
            </FrameLayout>
-->

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/colorFont2">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/berandabotton"/>
        <ImageButton
            android:id="@+id/btn_master"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/btnmaster"/>
        <ImageButton
            android:id="@+id/btn_input"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/inputbotton"/>
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/profilebotton"/>

    </LinearLayout>

</RelativeLayout>