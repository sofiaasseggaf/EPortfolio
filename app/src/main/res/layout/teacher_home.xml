<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".teacher.HomeTeacher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_home"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="115dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hai,"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#ffffff">
                    </TextView>
                    <TextView
                        android:id="@+id/namaGuru"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#ffffff"
                        android:text="Sofia Asseggaf"
                        android:maxLines="2"
                        android:layout_marginTop="5dp">
                    </TextView>
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgGuru"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_width="2dp"
                    android:src="@drawable/nopic"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:civ_border_color="#ffffff"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_search"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp">

                <EditText
                    android:id="@+id/txtSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Looking for . . ."
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:layout_marginLeft="35dp"/>

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/icon_search"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rlsearch">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_kelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_class"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="Kelas"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_mapel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_mata_pelajaran"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        android:text="Mata Pelajaran"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_guru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_guru"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="Guru"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_siswa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_siswa"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="Siswa"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ll1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_portfolio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_portfolio"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="Portfolio"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_master"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_data_master"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:text="Data Master"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_artikel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_article"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:text="Artikel"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_home_kalender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_calendar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="Kalender"/>
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/banner"
                android:layout_below="@id/ll2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article"
                android:layout_below="@id/btn_banner"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/txtMoreArticleGuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Articles"
                android:layout_below="@id/btn_banner"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textColor="#DF5532"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerArticleTeacher"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/txtMoreArticleGuru"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"></androidx.viewpager.widget.ViewPager>


            <!--
            <TextView
                android:id="@+id/txtMorePortfolioGuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="more portfolio"
                android:layout_marginTop="300dp"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/txtMorePortfolioGuru"
                android:layout_centerVertical="true"
                android:layout_marginTop="11dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"></androidx.viewpager.widget.ViewPager>

-->

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtMoreArticleGuru"
                android:background="#FFFFFF"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textloading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="#DF5532"/>
                <!--<ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:indeterminateDrawable="@drawable/pbstyle"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">
                </ProgressBar>-->
            </FrameLayout>

          <!--  <FrameLayout
                android:id="@+id/framelayout2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F6F5F5"
                android:layout_below="@id/txtMoreArtikelGuru"
                android:layout_marginTop="11dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textloading2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/colorFont"/>

                &lt;!&ndash;<ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:indeterminateDrawable="@drawable/pbstyle"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">
                </ProgressBar>&ndash;&gt;
            </FrameLayout>
-->

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:background="@drawable/rect_bottombar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_home_active"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#DF5532"
                android:textSize="12sp"
                android:text="Home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_data_master_inactive"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/fontcolor"
                android:textSize="12sp"
                android:text="Master"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_input"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/fontcolor"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Input"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/fontcolor"
                android:textSize="12sp"
                android:text="Profile"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>