<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="360dp"
    android:layout_height="720dp"
    android:background="@drawable/bghomeguru"
    tools:context=".teacher.HomeTeacher">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


    <LinearLayout
        android:id="@+id/rect_profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/hometop"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgGuru"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profilepicture"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                app:civ_border_color="#ffffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hai,"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorFont"
                    android:layout_marginTop="12dp">
                </TextView>
                <TextView
                    android:id="@+id/namaGuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Himalayati Jae Hoo"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorFont"
                    android:layout_marginTop="5dp">
                </TextView>
                <TextView
                    android:id="@+id/nipGuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMA ADI LUHUR"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorFont"
                    android:layout_marginTop="20dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/txtMorePortfolioGuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="more portfolio"
            android:layout_marginTop="70dp"
            android:clickable="true"
            android:layout_below="@id/rect_profile"
            android:fontFamily="@font/montserrat_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPortfolioGuru"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/txtMorePortfolioGuru"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/txtMoreArtikelGuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="more article"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:layout_below="@id/rvPortfolioGuru"
            android:fontFamily="@font/montserrat_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArtikelGuru"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/txtMoreArtikelGuru"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/colorFont2">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/berandabotton"/>
        <ImageButton
            android:id="@+id/btn_master"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/btnmaster"/>
        <ImageButton
            android:id="@+id/btn_input"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/inputbotton"/>
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/profilebotton"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </ProgressBar>
    </FrameLayout>

</RelativeLayout>