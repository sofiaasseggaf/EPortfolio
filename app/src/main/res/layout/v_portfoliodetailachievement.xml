<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="150dp"
    android:background="@drawable/rect_list_portfolio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imgDetailPortfolioA"
        android:src="@drawable/rect_img_master_portfolio"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/judulDetailPortfolioA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kemampuan Seni dalam Berbahasa dan Merangkum Tulisan"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="20sp"
            android:lines="2"
            android:maxLines="4"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/narasiDetailPortfolioA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kemampuan Seni dalam Berbahasa dan Merangkum Tulisan"
            android:layout_below="@id/judulDetailPortfolioA"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:lines="5"
            android:maxLines="8"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/tglDetailPortfolioA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20/12/2020"
            android:textSize="12sp"
            android:textColor="@color/fontdarkgrey"
            android:layout_below="@id/narasiDetailPortfolioA"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto_medium"/>

    </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#6DEFEFEF">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateDrawable="@drawable/pbstyle"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">
        </ProgressBar>

    </FrameLayout>

</RelativeLayout>