            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article"
                android:layout_below="@id/btn_banner"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/txtMoreArticleGuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Articles"
                android:layout_below="@id/btn_banner"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textColor="#DF5532"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerArticleStudent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/txtMoreArticleGuru"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"></androidx.viewpager.widget.ViewPager>

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtMoreArticleGuru"
                android:background="#FFFFFF"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textloading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="#DF5532"/>
                <!--<ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:indeterminateDrawable="@drawable/pbstyle"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">
                </ProgressBar>-->
            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:background="@drawable/rect_bottombar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_home_active"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#DF5532"
                android:textSize="12sp"
                android:text="Home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_portfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_portfolio_unactive"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Portfolio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_input"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Input"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Profile"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>