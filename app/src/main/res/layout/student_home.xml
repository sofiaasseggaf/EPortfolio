<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.HomeStudent"
    android:background="@drawable/bghomeguru">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="150dp">

            <LinearLayout
                android:id="@+id/rect_profile"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/hometop"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgSiswa"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profilepicture"
                        app:civ_border_width="2dp"
                        android:layout_gravity="center"
                        app:civ_border_color="#ffffff"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hai,"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/namaSiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Himalayati Jae Hoo"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/nisSiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SMA/SMK Sederajat"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="20dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/disemester"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorFont2"
                android:layout_below="@id/rect_profile"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:paddingTop="30dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Di Semester ini, \nkamu telah menyelesaikan :"
                    android:textColor="@color/colorFont"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtUnjukKerja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Unjuk Kerja"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont">
                        </TextView>
                        <TextView
                            android:id="@+id/txtKarya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Karya"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="10dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txtProyek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Proyek"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtPenghargaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Penghargaan"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont">
                        </TextView>
                        <TextView
                            android:id="@+id/txtOrganisasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Organisasi"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="10dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txtForumEdukasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Forum Edukasi"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtMorePortfolioSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="more portfolio"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:layout_below="@id/disemester"
                android:fontFamily="@font/montserrat_bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPortfolioSiswa"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/txtMorePortfolioSiswa"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/txtMoreArtikelSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="more article"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:layout_below="@id/rvPortfolioSiswa"
                android:fontFamily="@font/montserrat_bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvArtikelSiswa"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/txtMoreArtikelSiswa"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/colorFont2">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/berandabotton"/>
        <ImageButton
            android:id="@+id/btn_portfolio"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/portfoliobotton"/>
        <ImageButton
            android:id="@+id/btn_input"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/inputbotton"/>
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/profilebotton"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"></ProgressBar>

    </FrameLayout>

</RelativeLayout>