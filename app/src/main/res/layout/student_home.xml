<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.HomeStudent"
    android:background="@drawable/bghomeguru">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:id="@+id/rect_profile"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/hometop"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgSiswa"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/nopic"
                        android:layout_gravity="center"
                        app:civ_border_color="#ffffff"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hai,"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/namaSiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/nisSiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/disemester"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/rect_profile"
                android:orientation="vertical"
                android:background="#E8E8E8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Pada Semester ini, \nSaya telah menyelesaikan :"
                    android:textColor="@color/colorFont"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtUnjukKerja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Unjuk Kerja"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont">
                        </TextView>
                        <TextView
                            android:id="@+id/txtKarya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Karya"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="15dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txtProyek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Proyek"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="15dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/txtPenghargaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Penghargaan"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont">
                        </TextView>
                        <TextView
                            android:id="@+id/txtOrganisasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Organisasi"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="15dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txtForumEdukasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="- Forum Edukasi"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorFont"
                            android:layout_marginTop="15dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtMorePortfolioSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="more portfolio"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_below="@id/disemester"
                android:fontFamily="@font/montserrat_bold"/>


            <androidx.viewpager.widget.ViewPager
                android:foregroundGravity="center"
                android:id="@+id/viewPager"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:clipToPadding="false"
                android:layout_below="@id/txtMorePortfolioSiswa"
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </androidx.viewpager.widget.ViewPager>

           <!-- <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSliderPortfolioSiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMorePortfolioSiswa"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>
-->


            <!--

            <TextView
                android:id="@+id/txtMoreArtikelSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="more article"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:layout_below="@id/rvSliderPortfolioSiswa"
                android:fontFamily="@font/montserrat_bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvArtikelSiswa"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/txtMoreArtikelSiswa"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>

            -->

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/colorFont2">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/berandabotton"/>
        <ImageButton
            android:id="@+id/btn_portfolio"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/btnportfolio"/>
        <ImageButton
            android:id="@+id/btn_input"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center"
            android:background="@drawable/inputbotton"/>
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/profilebotton"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#F6F5F5"
        android:visibility="gone">

        <TextView
            android:id="@+id/textloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:textColor="@color/colorFont"/>
        <!--<ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:indeterminateDrawable="@drawable/pbstyle"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">
        </ProgressBar>-->
    </FrameLayout>

</RelativeLayout>