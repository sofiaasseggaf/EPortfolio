<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgoutput2"
    tools:context=".student.outputportfolio.OutputPortfolioC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tingkat Penilaian"
                android:fontFamily="@font/roboto_medium"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_output_score"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/output_score"/>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nilai"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputNilaiA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95 - 100"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Predikat"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputPredikatA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/outputRubrikA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/font"
                    android:text="Semua kriteria terpenuhi, yaitu kualitas menyimpulkan masalah tepat, kerjasama kelompok baik dan membuat ide baru."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_output_score"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/output_score"/>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nilai"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputNilaiB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80 - 95"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Predikat"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputPredikatB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/outputRubrikB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/font"
                    android:text="Dua dari tiga kriteria terpenuhi, yaitu kualitas menyimpulkan masalah tepat, atau kerjasama kelompok baik atau tepat membuat ide baru."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_output_score"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/output_score"/>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nilai"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputNilaiC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70 - 80"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Predikat"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputPredikatC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/outputRubrikC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/font"
                    android:text="Satu dari tiga kriteria terpenuhi, yaitu kualitas menyimpulkan masalah tepat atau kerjasama kelompok baik atau tepat membuat ide baru."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_output_score"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/output_score"/>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nilai"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputNilaiD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 - 70"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Predikat"
                            android:textColor="@color/font"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/outputPredikatD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D"
                            android:textColor="@color/oren"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/outputRubrikD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/font"
                    android:text="Semua kriteria belum terpenuhi, yaitu kualitas menyimpulkan masalah kurang tepat dan kerjasama kelompok kurang baik dan membuat ide baru tidak tepat."/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#B5EFEFEF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_student_portfolio_login"/>
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:indeterminateDrawable="@drawable/pbstyle"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">
            </ProgressBar>

        </LinearLayout>





    </FrameLayout>


</RelativeLayout>