<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.eportfolio">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:debuggable="false"
        tools:ignore="HardcodedDebugMode"
        android:requestLegacyExternalStorage="true">

        <activity android:name="com.project.eportfolio.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.project.eportfolio.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.utility.PreferenceUtils" />
        <activity android:name=".ArtikelActivity" />



        <activity android:name="com.project.eportfolio.student.HomeStudent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.student.InputStudent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.student.ProfileStudent"/>
        <activity android:name=".student.MapelStudent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".student.GuruStudent"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.student.ProfileStudentSettingEdit"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.student.ProfileStudentSettingPrivacy"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name="com.project.eportfolio.student.portfolio.PortfolioStudentUnjukKerja"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.student.portfolio.PortfolioStudentKarya"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.student.portfolio.PortfolioStudentProject"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.student.portfolio.PortfolioStudentAchievement"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".student.portfolio.PortfolioDetail"></activity>



        <activity android:name="com.project.eportfolio.teacher.HomeTeacher"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.input.InputTeacherA"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.input.InputTeacherB"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.input.InputTeacherC"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.input.InputTeacherD"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.MasterTeacher" />
        <activity android:name="com.project.eportfolio.teacher.ProfileTeacher"/>
        <activity android:name="com.project.eportfolio.teacher.ProfileTeacherSettingEdit"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.project.eportfolio.teacher.ProfileTeacherSettingPrivacy"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name="com.project.eportfolio.teacher.master.DataGuru"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.master.DataKelas"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.master.DataMapel"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.master.DataMurid"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.project.eportfolio.teacher.master.DataPortfolioDuaModel"
            android:windowSoftInputMode="stateHidden"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.project.eportfolio.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>